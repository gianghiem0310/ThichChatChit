<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avt"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="6dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:padding="10dp"
            android:text="Hello Peter Hello Peter Hello Peter Hello Peter Hello Peter Hello Peter Hello Peter"
            android:textSize="14sp"
            android:id="@+id/content"
            android:maxWidth="250dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/avt"
            app:layout_constraintStart_toEndOf="@id/avt"
            android:background="@drawable/bg_receive_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/time"
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_constraintStart_toEndOf="@id/avt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="22:30"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>